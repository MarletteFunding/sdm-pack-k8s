{
  "name": "@atomist/sdm-pack-k8",
  "version": "0.1.2",
  "description": "Extension Pack for an Atomist SDM to integrate Kubernetes deployments",
  "author": {
    "name": "Atomist, Inc."
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/atomist/sdm-pack-k8#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomist/sdm-pack-k8.git"
  },
  "keywords": [
    "atomist",
    "automation",
    "sdm",
    "extension",
    "pack",
    "k8",
    "kubernetes"
  ],
  "bugs": {
    "url": "https://github.com/atomist/sdm-pack-k8/issues"
  },
  "dependencies": {},
  "peerDependencies": {
    "@atomist/automation-client": "*",
    "@atomist/sdm": "*"
  },
  "devDependencies": {
    "@atomist/automation-client": "^0.21.4",
    "@atomist/sdm": "^0.4.4",
    "@types/lodash": "^4.14.116",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.7.1",
    "@types/power-assert": "^1.4.29",
    "espower-typescript": "^9.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm-run-all lint compile test",
    "clean": "npm-run-all clean:js clean:build",
    "clean:benchmark": "rimraf isolate-*-v8.log",
    "clean:build": "rimraf *-v8.log profile.txt build",
    "clean:dist": "npm-run-all clean clean:npm",
    "clean:js": "rimraf \"{src,test}/**/*.js\"",
    "clean:npm": "rimraf node_modules",
    "compile": "npm-run-all git:info compile:ts",
    "compile:ts": "tsc --project .",
    "git:info": "atm-git-info",
    "lint": "tslint --format verbose --project . --exclude \"{build,node_modules}/**\" \"**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --require espower-typescript/guess --exit \"test/**/*.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.ts}\"",
    "typedoc": "typedoc --mode modules --excludeExternals --out build/typedoc src",
    "watch:compile": "tsc --project . --watch",
    "watch": "supervisor --watch build --quiet --exec npm -- run start"
  },
  "main": "dist/index.js",
  "engines": {
    "node": "9.x.x",
    "npm": "6.x.x"
  }
}
