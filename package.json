{
  "name": "@atomist/sdm-pack-k8",
  "version": "1.0.2",
  "description": "Extension Pack for an Atomist SDM to integrate Kubernetes deployments",
  "author": {
    "name": "Atomist",
    "email": "support@atomist.com",
    "url": "https://atomist.com/"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/atomist/sdm-pack-k8#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomist/sdm-pack-k8.git"
  },
  "bugs": {
    "url": "https://github.com/atomist/sdm-pack-k8/issues"
  },
  "keywords": [
    "atomist",
    "automation",
    "sdm",
    "extension",
    "pack",
    "kubernetes"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "dependencies": {
    "@kubernetes/client-node": "^0.7.2",
    "@types/app-root-path": "^1.2.4",
    "@types/fs-extra": "^5.0.4",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.10",
    "@types/p-retry": "^2.0.0",
    "@types/promise-retry": "^1.1.2",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.48.1",
    "@types/retry": "^0.10.2",
    "app-root-path": "^2.1.0",
    "docker-file-parser": "^1.0.3",
    "fs-extra": "^7.0.1",
    "json-stringify-safe": "^5.0.1",
    "kubernetes-client": "^5.3.1",
    "lodash": "^4.17.11",
    "p-retry": "^3.0.0",
    "promise-retry": "^1.1.1",
    "read-pkg-up": "^4.0.0",
    "retry": "^0.12.0"
  },
  "peerDependencies": {
    "@atomist/automation-client": ">=1.2.0",
    "@atomist/sdm": ">=1.2.0",
    "@atomist/sdm-core": ">=1.2.0"
  },
  "devDependencies": {
    "@atomist/automation-client": "1.2.0",
    "@atomist/sdm": "1.2.0",
    "@atomist/sdm-core": "1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/power-assert": "^1.4.29",
    "espower-typescript": "^9.0.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.4.4",
    "rimraf": "^2.6.2",
    "supervisor": "^0.12.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "run-s compile test lint doc",
    "clean": "run-p clean:compile clean:test clean:doc clean:run",
    "clean:compile": "rimraf git-info.json \"index.{d.ts,js{,.map}}\" \"{lib,test}/**/*.{d.ts,js{,.map}}\" lib/typings/types.ts",
    "clean:dist": "run-s clean clean:npm",
    "clean:doc": "rimraf doc",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:test": "rimraf .nyc_output coverage",
    "compile": "run-s gql:gen compile:ts",
    "compile:ts": "tsc --project .",
    "doc": "typedoc --mode modules --excludeExternals --ignoreCompilerErrors --exclude \"**/*.d.ts\" --out doc index.ts lib",
    "gql:gen": "atm-gql-gen",
    "lint": "tslint --config tslint.json --format verbose --project .",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha --require espower-typescript/guess \"test/**/*.test.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.test.ts}\"",
    "typedoc": "npm run doc"
  },
  "engines": {
    "node": ">=8.1.0",
    "npm": ">=5.0.0"
  }
}
